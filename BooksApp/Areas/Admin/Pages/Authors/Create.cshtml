@page
@model BooksApp.Areas.Admin.Pages.Authors.CreatePage

@{
    Layout = "_Layout";
    ViewData["Title"] = "Create author";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h1>@ViewData["Title"]</h1>

                    <div class="alert alert-danger mt-3 pb-0" role="alert" asp-validation-summary="ModelOnly"></div>

                    <form method="post">
                        <div class="mb-3">
                            <label class="form-label" asp-for="Form.FirstName"></label>
                            <input class="form-control" asp-for="Form.FirstName" />
                            <span class="text-danger form-text" asp-validation-for="Form.FirstName"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" asp-for="Form.LastName"></label>
                            <input class="form-control" asp-for="Form.LastName" />
                            <span class="text-danger form-text" asp-validation-for="Form.LastName"></span>
                        </div>

                        <button class="btn btn-primary">Create</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
